<%= form_for [@product, @product.reviews.build] do |f| %>
  <p>
    Do you own this? Let us know what you think!
  </p>
  <p>
    <%= f.label :text, "Your Thoughts" %>
    <%= f.select :rating, [5, 4, 3, 2, 1], :prompt => "Rate This!" %>
    <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
